#!/usr/bin/env bash

ESTABLISH_DIR="${HOME}/.establish"

_establish_usage() {
  echo "USAGE:";
  echo -e "\t`basename ${0}` [up]"
  echo -e "\t`basename ${0}` create"
  exit 1;
}

case "$1" in
  "" | "up" | "down")
    COMMAND=$1
    shift
    . "${ESTABLISH_DIR}/lib/up.sh"
    ;;
  "create")
    shift
    . "${ESTABLISH_DIR}/lib/create.sh"
    ;;
  *)
    _establish_usage
    ;;
esac
